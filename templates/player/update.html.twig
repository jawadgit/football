{% extends "base.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5">Update Player</h3>
			{% for message in app.flashes('notice') %}
				<div class="alert alert-success mt-4">
					{{message}}
				</div>
			{% endfor %}
            <div class="col-md-6 offset-md-3">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.surname) }}
                    {{ form_widget(form.surname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(form.team) }}
                    {{ form_widget(form.team, {'attr': {'class': 'form-select'}}) }}
                </div>
                {# <select class="form-group" id="team">
                    {% for data in list %}
                        <option value="{{data.id}}">{{data.name}}</option>
                    {% endfor %}
                </select> #}
                <div class="form-group">
                    <button class="btn btn-info mt-2 text-white">Submit</button>
                    <hr>
                    <a class="btn btn-danger float-end" href="{{ path('player') }}">Cancel</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
